<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f4f4f4"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="250dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image1"
                android:id="@+id/courseDetailImage"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000"
                android:alpha="0.6"
                />
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_centerInParent="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/courseDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/antic"
                        android:text="Lập trình Java từ căn bản đến nâng cao"
                        android:textColor="@color/white"
                        android:textSize="30dp"
                        app:fontFamily="@font/open_sans_bold" />

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="-20dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="200dp"
                                android:layout_height="wrap_content"
                                >
                                <ProgressBar
                                    android:id="@+id/joinedCourseProgressbar"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="250dp"
                                    android:layout_height="100dp"
                                    android:indeterminate="false"
                                    android:max="100"
                                    android:progress="60"
                                    android:layout_centerInParent="true"
                                    android:progressDrawable="@drawable/join_course_circular"
                                    android:secondaryProgress="100"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="60%"
                                    android:layout_marginLeft="-85dp"
                                    android:textSize="25sp"
                                    android:id="@+id/joinedCoursePercent"
                                    android:textColor="#fff"
                                    android:layout_gravity="center"/>
                            </RelativeLayout>
                            <Button
                                android:layout_margin="1dp"
                                android:layout_gravity="center_vertical"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:textSize="18dp"
                                android:background="@drawable/bg_btn1"
                                android:id="@+id/joinedCourseName1"
                                android:text="Lean now"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:textColor="#ffff"
                                android:outlineSpotShadowColor="#050101"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:background="@drawable/activity_course_detail_border_btn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lesson"
                android:textSize="25dp"
                android:textColor="#000"
                android:fontFamily="@font/open_sans_bold"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="10dp"
                android:id="@+id/list_lesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </LinearLayout>

</ScrollView>